<div class="container-fluid">
    <div class="row">
        <ul class="col-md-8">
          {{#each idea in model}}
              <li class="idea container-fluid">
                  <header class="row ideaHeader">
                      <h3>{{idea.title}}</h3>
                  </header>
                  <div class="row">
                      <div class="col-md-6">
                          <p>
                            {{idea.description}}
                          </p>
                      </div>
                      <div class="col-md-6">
                          <div class="media"></div>
                      </div>
                  </div>
              </li>
          {{/each}}
        </ul>
        <div class="col-md-4">
            <div class="ideaSuccessStory">
                <header class="bg-green">
                   <h3>We Made It!</h3>
                </header>
                <p>Something about the awesome idea</p>
                <p><a>read more</a></p>
            </div>
        </div>
    </div>
</div>

